<script src = "https://maps.googleapis.com/maps/api/js">
</script>
<script>
    var map1;
    var map2;
    function createMarker(coords, map, title){
        var marker = new google.maps.Marker({
            position: coords, map: map, title: title
        })
    }
    function initialize(){
        var mapoptions1 = {
            zoom: 17, center: new google.maps.LatLng(38.561065, -121.486453)  
        }
        var mapoptions2 = {
            zoom: 17, center: new google.maps.LatLng(38.416454, -121.526800)
        }
        map1 = new google.maps.Map(document.getElementById("map-canvas1"),mapoptions1)
        createMarker({lat:38.561065, lng:-121.486453}, map1, "Pease Conservatory of Music")
        
        map2 = new google.maps.Map(document.getElementById("map-canvas2"),mapoptions2)
        createMarker({lat:38.416454, lng:-121.526800}, map2, "Clarksburg Community Church")
    }
    google.maps.event.addDomListener(window, "load", initialize)
</script>

