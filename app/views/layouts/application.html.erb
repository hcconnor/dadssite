<!DOCTYPE html>
<html>
    <title><%= yield(:title) %></title>
<head>
    <%= favicon_link_tag 'favicon.ico' %>
  <title>Dadssite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src = "https://maps.googleapis.com/maps/api/js">
</script>
<script>
    var address1 = {lat:38.573845, lng:-121.478387}
    var address2 = {lat:38.416454, lng:-121.526800}
    var address3 = {lat:38.760247, lng:-121.293527}
    var map1;
    var map2;
    var map3;
    function createMarker(coords, map, title){
        var marker = new google.maps.Marker({
            position: coords, map: map, title: title
        })
    }
    function initialize(){
        var mapoptions1 = {
            zoom: 15, center: new google.maps.LatLng(address1.lat, address1.lng)  
        }
        var mapoptions2 = {
            zoom: 12, center: new google.maps.LatLng(address2.lat, address2.lng)
        }
        var mapoptions3 = {
            zoom: 15, center: new google.maps.LatLng(address3.lat, address3.lng)
        }
        map1 = new google.maps.Map(document.getElementById("map-canvas1"),mapoptions1)
        createMarker(address1, map1, "Pease Conservatory of Music")
        var panooptions1 = {
            position: address1,
            pov: {heading: 200, pitch: 9}
        }
        // var panorama = new google.maps.StreetViewPanorama(document.getElementById("pano1"),panooptions1)
        // map1.setStreetView(panorama)
        
        map2 = new google.maps.Map(document.getElementById("map-canvas2"),mapoptions2)
        createMarker(address2, map2, "Clarksburg Community Church")
        var panooptions2 = {
            position: address2,
            pov: {heading: 10, pitch: 9}
        }
        map3 = new google.maps.Map(document.getElementById("map-canvas3"),mapoptions3)
        createMarker(address3, map3, "Music Institute of Roseville")
        // var panorama = new google.maps.StreetViewPanorama(document.getElementById("pano2"),panooptions2)
        // map2.setStreetView(panorama)
    }
    google.maps.event.addDomListener(window, "load", initialize)
</script>
</head>
<body>
<div id='header'>
	<div id='title'>
		Keith Connor's Music Lessons
	</div>

	
</div>
<div id = 'navbar'>
	<ul>
		<li id = 'home' class = 'navitem'>Home</li>
		<li id = 'lesson' class = 'navitem'>Lesson Schedule</li>
		<li id = 'videos' class = 'navitem'>Videos</li>
		<li id = 'mp' class = 'navitem'>MP3 Files</li>
		<li id = 'contact' class = 'navitem'>Contact Me</li>
		<!-- <li class = 'navitem'>  </li>
		<li class = 'navitem'>  </li> -->
	</ul>
</div>
<div class = 'notification-container'>
<% if flash[:notice] %>
    <p class = 'notice'><%= notice %></p>
    <%end%>
<% if flash[:alert] %>
    <p class = 'error'><%= alert %></p>
    <% end %>
</div>
<%= yield %>

<div id = "footer">
contact me at blah blah blah
