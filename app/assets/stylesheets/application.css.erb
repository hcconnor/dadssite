body{
	background-color: #c4c4ff;
	text-align: center;
	font-family: helvetica;
}
a{
	cursor: auto;
	color: blue;
}
a:visited{
	color: #551A8B;
}
#header{
	background-color: #66F;
	height: 200px;
	background-image: url(<%= asset_path 'violinplaceholder.png'%>);
	/*background-image: url("app/assets/images/violin placeholder.png");*/
	text-align: center;
	position: relative;
}
#title{
	display: inline-block;
	position: relative;
/*	width: 750px;
	height: 200px;*/
	margin: 0px auto; 
	text-align: center;
	font-size: 50px;
	font-family: helvetica;
	top:50%;
	transform: translateY(-50%);
	/*width:60%;*/
}
#title:hover{
	background-color: rgba(253, 253, 253, 0.5);
	cursor: pointer;
}
#navbar {
	/*position: absolute;*/
	bottom: 0;
	text-align: center;
}

#navbar ul{
	list-style: none;
	background-color: #444;
	/*text-align: center;*/
	padding: 0;
	margin: 0;
	/*display: inline-block;*/
}

#navbar li{
	transition: .3s background-color, .3s color;
	padding: 2px 12px 2px 12px;
	font-family: helvetica;
	font-size: 1.2em;
	line-height: 40px;
	height: 40px;
	color: #FFF;
	border-bottom: 2px solid #888;
	display: inline-block;
}
#navbar li:hover{
	background-color: #005f5f;
	cursor: pointer;
}
#navbar li:active{
	background-color: #FFF;
	color: #000;
}