body{
	margin:0px;
	text-align: center;
	font-family: helvetica;
}
a{
	cursor: auto;
	color: blue;
}
a:visited{
	color: #551A8B;
}
#header{
	background-color: brown;
	height: 200px;
	background-image: url(<%= asset_path 'violin_header_00000.jpg'%>);
	background-position: 50%;
	background-repeat: no-repeat;
	background-size: cover;
 	margin: 0 auto;
 	max-height: 300px;
 	max-width: 1920px;
	/*background-image: url("app/assets/images/violin placeholder.png");*/
	text-align: center;
	position: relative;
}
#title{
	display: inline-block;
	position: relative;
/*	width: 750px;
	height: 200px;*/
	margin: 0px auto; 
	text-align: center;
	font-size: 50px;
	font-family: helvetica;
	top:50%;
	transform: translateY(-50%);
	color:white;
	text-shadow: 3px 3px 10px black;
	/*width:60%;*/
}
#title:hover{
	/*background-color: rgba(253, 253, 253, 0.5);*/
	cursor: pointer;
}
#navbar {
	/*position: fixed;*/
	width:100%;
	bottom: 0;
	text-align: center;
	box-shadow: 2px 4px 5px darkgrey;
	height:45px;
	z-index:1;
}

#navbar ul{
	list-style: none;
	background-color: #444;
	/*text-align: center;*/
	padding: 0;
	margin: 0;
	/*display: inline-block;*/
}

#navbar li{
	transition: .3s background-color, .3s color;
	padding: 2px 12px 2px 12px;
	font-family: helvetica;
	font-size: 1.2em;
	line-height: 40px;
	height: 40px;
	color: #FFF;
	border-bottom: 2px solid #888;
	display: inline-block;
}
#navbar li:hover{
	background-color: #E27575;
	cursor: pointer;
}
#navbar li:active{
	background-color: #FFF;
	color: #000;
}
.notification-container, .error-container{
	position:fixed;
	left:50%;
}
.notice, .error{
	left:-50%;
	border-radius:3px;
	padding: 10px;
	display:inline-block;
	color: #4F8A10;
	position:relative;
	margin:auto;
}
.notice{
	border:1px solid green;
	background-color: #DFF2BF;
	color: #4F8A10;
	animation: fadeOut 3s linear forwards;
}
.error{
	border:1px solid red;
	background-color: #FFBABA;
	color: #D8000C;
	text-align:left;
	animation: fadeOut 5s linear forwards;
}
.error ul{
	list-style:none;
	padding:0px;
	margin:0px;
}
@keyframes fadeOut{
	0% {opacity: 0;}
	10% {opacity: .9;}
	90% {opacity: .9; transform: translateY(0px);}
	99% {opacity: 0; transform: translateY(-50px);}
	100%{opacity: 0;}
}